<MudDialog>
    <DialogContent>
        <MudText>Вы действительно хотите удалить? Эта операция не может быть отменена!</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Отменить</MudButton>
        <MudButton Color="Color.Error" Variant="Variant.Filled" OnClick="Submit">Удалить</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}